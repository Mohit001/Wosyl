<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/user_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_lite_grey"/>

    <RelativeLayout
        android:layout_below="@id/divider1"
        android:id="@+id/home_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/dimn14"
            android:layout_marginBottom="@dimen/dimn14"
            android:src="@drawable/ic_user_back"
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/home_lbl"
            android:text="Home"
            android:layout_marginLeft="@dimen/dimn14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView

        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/home_ll"
        android:background="@color/text_lite_grey"/>


    <RelativeLayout
        android:layout_below="@id/home_ll"
        android:id="@+id/pending_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/dimn14"
            android:layout_marginBottom="@dimen/dimn14"
            android:src="@drawable/ic_user_back"
            android:id="@+id/pending_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:text="2"
            android:layout_marginLeft="@dimen/dimn10"
            android:layout_marginRight="@dimen/dimn10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/pending_bedget_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pending_lbl"
            android:text="Pending"
            android:layout_marginLeft="@dimen/dimn14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/pending_bedget_count"
            android:layout_toRightOf="@id/pending_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView

        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pending_ll"
        android:background="@color/text_lite_grey"/>


    <RelativeLayout
        android:layout_below="@id/divider3"
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/dimn14"
            android:layout_marginBottom="@dimen/dimn14"
            android:src="@drawable/ic_user_back"
            android:id="@+id/setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/setting_lbl"
            android:text="Setting"
            android:layout_marginLeft="@dimen/dimn14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@id/setting_icon"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimn10"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/setting_ll"
        android:background="@color/text_lite_grey"/>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/logout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/dimn14"
            android:layout_marginBottom="@dimen/dimn14"
            android:src="@drawable/ic_user_back"
            android:id="@+id/logout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/logout_lbl"
            android:text="Logout"
            android:layout_marginLeft="@dimen/dimn14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@id/logout_icon"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimn10"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_above="@id/logout_ll"
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@color/text_lite_grey"/>
</RelativeLayout>