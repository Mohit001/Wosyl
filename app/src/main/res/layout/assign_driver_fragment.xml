<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/user_background"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back_image_btn"
        android:src="@drawable/ic_user_back"
        android:layout_marginTop="@dimen/dimn18"
        android:layout_marginLeft="@dimen/dimn14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/wosyl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimn10"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"/>

    <ImageView
        android:id="@+id/collect_address_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wosyl_logo"
        android:layout_marginTop="@dimen/dimn10"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"/>

    <TextView
        android:id="@+id/assign_driver_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Found"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/collect_address_progress"
        android:layout_marginTop="@dimen/dimn10"
        />






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/assign_driver_lbl"
        android:layout_marginLeft="@dimen/dimn18"
        android:layout_marginRight="@dimen/dimn18"
        android:layout_marginTop="@dimen/dimn26"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/assign_driver_name_rl"
            android:layout_width="match_parent"
            android:background="@drawable/input_round_corner"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/assign_driver_rating_lbl"
                android:layout_width="wrap_content"
                android:inputType="text"
                android:hint="5"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_marginRight="@dimen/dimn10"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_name_left"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/assign_driver_name_lbl"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/assign_driver_rating_lbl"
                android:hint="Driver Name"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_name_left"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/assign_driver_number_lbl"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="Driver Number"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/dimn18"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_name_left"
            android:background="@drawable/input_round_corner"
            android:layout_below="@id/assign_driver_name_rl"
            android:layout_marginTop="@dimen/dimn14"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/assign_driver_vehicle_type_lbl"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="Items"
            android:textSize="@dimen/dimn18"
            android:gravity="center_vertical"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_action_lock_outline"
            android:background="@drawable/input_round_corner"
            android:layout_below="@id/assign_driver_number_lbl"
            android:layout_marginTop="@dimen/dimn14"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/assign_driver_distance_lbl"
            android:layout_width="match_parent"
            android:hint="Distance To Pickup(3 Minutes)"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/dimn18"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_action_lock_outline"
            android:background="@drawable/input_round_corner"
            android:layout_below="@id/assign_driver_vehicle_type_lbl"
            android:layout_marginTop="@dimen/dimn14"
            android:layout_height="48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimn18"
            android:layout_below="@id/assign_driver_distance_lbl"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/no_btn"
                android:layout_above="@id/terms_and_condition"
                android:background="@drawable/blue_round_corner_solid"
                android:text="No"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"/>



            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/next_btn"
                android:layout_above="@id/terms_and_condition"
                android:background="@drawable/blue_round_corner_solid"
                android:text="@string/next"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>